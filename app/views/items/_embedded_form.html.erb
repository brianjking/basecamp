<%= form_for([list, item], :remote => true, :html => {:class => 'well'}) do |f|%>
  <div class="field">
    <%= f.label "Add an item to the list:" %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit "Save item", :class=>"btn btn-primary btn-medium" %>
  </div>
<% end %>